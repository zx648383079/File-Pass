<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ctl="clr-namespace:ZoDream.FileTransfer.Controls"
             x:Class="ZoDream.FileTransfer.Controls.MessageTextListItem">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid HorizontalOptions="{TemplateBinding HorizontalOptions}">
                <Grid.GestureRecognizers>
                    <ctl:LongPressedGestureRecognizer/>
                </Grid.GestureRecognizers>
                <BoxView Color="{StaticResource White}" 
                 CornerRadius="{TemplateBinding CornerRadius}"/>
                <Label Text="{TemplateBinding ItemSource.Content}" Padding="12,5"/>
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
