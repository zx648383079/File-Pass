<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ctl="clr-namespace:ZoDream.FileTransfer.Controls"
             x:Class="ZoDream.FileTransfer.Controls.UserSelectDialog">


    <Grid x:Name="DialogBox" HeightRequest="300" VerticalOptions="End" HorizontalOptions="Fill">
        <BoxView Color="{StaticResource Gray100}" CornerRadius="40,40,0,0">
            <BoxView.Shadow>
                <Shadow Brush="Black"
                    Offset="20,20"
                    Radius="40"
                    Opacity="0.8"/>
            </BoxView.Shadow>
        </BoxView>
        <Grid Margin="10,10,10,0" RowDefinitions="48,*" ColumnDefinitions="*,auto">
            <Label Text="新发现设备" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Button x:Name="CloseBtn" Text="&#xe653;" SemanticProperties.Hint="关闭"
                    Clicked="CloseBtn_Clicked"
                    Style="{StaticResource BodyIconBtn}" Grid.Column="1"/>
            <CollectionView Grid.Row="1" Grid.ColumnSpan="2">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <ctl:UserOptionItem/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentView>
